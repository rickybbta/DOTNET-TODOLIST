@model ListToDoViewModel

<div class="row">
    <div class="col text-center">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Título</th>
                    <th scope="col">Data</th>
                    <th scope="col">Completo?</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var todo in Model.ToDos) {
                    <tr>
                        <td>@todo.id</td>
                        <td>@todo.title</td>
                        <td>@todo.date</td>
                        <td>@todo.iscompleted</td>
                        <td>
                            <a href="" class="btn btn-sm btn-success">Completar</a>
                            <a href="" class="btn btn-sm btn-warning">Editar</a>
                            <!--a href="/ToDo/Delete/@todo.id" class="btn btn-sm btn-danger">Excluir</a-->
                            <a asp-controller="ToDo" asp-action="Delete" asp-route-id="@todo.id" class="btn btn-sm btn-danger">Excluir</a>
                        </td>
                    </tr>        
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col">
        <a href="" class="btn btn-primary">Nova tarefa</a>
    </div>
</div>